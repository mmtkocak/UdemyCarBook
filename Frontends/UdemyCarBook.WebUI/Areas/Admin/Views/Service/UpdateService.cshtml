@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Güncelleme</h4>
                        <form method="post">
                            <input asp-for="ServiceID" type="hidden" />
                            <div class="form-group">
                                <label>Hizmet Adı</label>
                                <input type="text" class="form-control" required placeholder="Hizmet Adı" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" required placeholder="Hİzmet Açıklaması" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label>Hizmet Ikon Url</label>
                                <input type="text" class="form-control" required placeholder="Url" asp-for="IconUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


