@model List<ResultAllBlogsWithAuthorDto>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a href="/Blog/BlogDetail/@item.blogID" class="block-20 img" style="background-image: url('@item.coverImageUrl');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="/Blog/BlogDetail/@item.blogID">@item.createdDate.ToShortDateString()</a></div>
                                <div><a href="/Blog/BlogDetail/@item.blogID">@item.authorName</a></div>
                                <div><a href="/Blog/BlogDetail/@item.blogID" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="/Blog/BlogDetail/@item.blogID">@item.title</a></h3>
                            <p>@item.description</p>
                            <p><a href="/Blog/BlogDetail/@item.blogID" class="btn btn-primary">Devamı <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

